@if (isSideNavOpen)
{
    <MudNavMenu>
        <MudNavLink Href="@home" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.Payments" IconColor="Color.Surface">Orders</MudNavLink>
        <MudNavLink Href="@external" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.Api" IconColor="Color.Surface">Extrnal Api</MudNavLink>
        <MudNavLink Href="@dashboard" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.AppsOutage" IconColor="Color.Surface">Analutics Dashboard</MudNavLink>

    </MudNavMenu>
}
else
{
    <MudNavMenu>

        <MudTooltip Text="Orders" Arrow="true" Placement="Placement.Right">
            <MudNavLink Href="@home" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.Payments" IconColor="Color.Surface">Orders</MudNavLink>
        </MudTooltip>

        <MudTooltip Text="External Api" Arrow="true" Placement="Placement.Right">
            <MudNavLink Href="@external" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.Api" IconColor="Color.Surface">External Api</MudNavLink>
        </MudTooltip>

        <MudTooltip Text="Analutics Dashboard" Arrow="true" Placement="Placement.Right">
            <MudNavLink Href="@dashboard" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.Dashboard" IconColor="Color.Surface">Analutics Dashboard</MudNavLink>
        </MudTooltip>

    </MudNavMenu>
}

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    [Parameter]
    public bool isSideNavOpen { get; set; }

    string external { get; } = "externalApi";
    string home { get; } = "";
    string dashboard { get; } = "";
}
