    .header, .row {
        display: flex;
        padding: 8px;
    }

    .col {
        flex: 1;
        padding: 8px;
    }

        .col:last-child {
            text-align: right;
        }

    .btn {
        margin-left: 4px;
    }

    .header .col {
        font-weight: bold;
        border-bottom: 2px solid lightgray;
    }

   
